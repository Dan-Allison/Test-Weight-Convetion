class Weight_converstions:
    def kg_to_st(self, kg):
        output1 = kg * 0.157473
        print "My weight in stones is %.2f" % output1
        
    def st_to_kg(self, st):
        output2 = st * 6.35029
        print "My weight in kilograms is %.2f" % output2      
              
con_weight = Weight_converstions()

con_weight.kg_to_st(99) # Insert weight in KG here
con_weight.st_to_kg(15.59) # Insert weight in stones here
